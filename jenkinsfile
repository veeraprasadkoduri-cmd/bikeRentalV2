pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        credentialsId: 'sai1',
                        url: 'https://github.com/veeraprasadkoduri-cmd/bikeRentalV2.git'
                    ]]
                )
            }
        }

        stage('Install') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test || true'
            }
        }

        stage('Package'){
            steps{
                sh 'npm pack'
            }
        }
    }
}
